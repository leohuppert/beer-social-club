{% extends 'base.html.twig' %}

{% block body %}
    <h1>Beer</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ beer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ beer.name }}</td>
            </tr>
            <tr>
                <th>Degree</th>
                <td>{{ beer.degree }}</td>
            </tr>
            <tr>
                <th>Brewer</th>
                <td>{{ beer.brewer }}</td>
            </tr>
        <tr>
            <th>Type</th>
            <td>{{ beer.type }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('beer_rate', { id: beer.id }) }}" class="btn btn-primary">Rate that beer!</a>

    <ul>
        <li>
            <a href="{{ path('beer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('beer_edit', { 'id': beer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
