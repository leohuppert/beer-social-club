{% extends 'base.html.twig' %}

{% block body %}
    <h1>Beers list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Degree</th>
                <th>Brewer</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for beer in beers %}
            <tr>
                <td><a href="{{ path('beer_show', { 'id': beer.id }) }}">{{ beer.id }}</a></td>
                <td>{{ beer.name }}</td>
                <td>{{ beer.degree }}</td>
                <td>{{ beer.brewer }}</td>
                <td>{{ beer.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('beer_show', { 'id': beer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('beer_edit', { 'id': beer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('beer_new') }}">Create a new beer</a>
        </li>
    </ul>
{% endblock %}
